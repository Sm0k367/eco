{
  "buildCommand": "cd frontend && npm ci --legacy-peer-deps --prefer-offline --no-audit && npm run build",
  "outputDirectory": "frontend/build",
  "installCommand": "npm install --legacy-peer-deps --prefer-offline --no-audit",
  "env": {
    "REACT_APP_API_URL": "@api_url",
    "REACT_APP_FRONTEND_URL": "@frontend_url",
    "CI": "false"
  },
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/static/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    },
    {
      "source": "/index.html",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=0, must-revalidate"
        }
      ]
    }
  ]
}
